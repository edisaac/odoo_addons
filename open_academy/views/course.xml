<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_course_tree">
            <field name="name">open academy course</field>
            <!-- nombre de la clase course.py-->
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <tree string="Courses">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_course_form">
            <field name="name">open academy course</field>
            <!-- nombre de la clase course.py-->
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <form string="Courses">
                    <group>
                        <field name="name"/>
                        <field name="responsible_id"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                         <page string="Sessions">
                            <field name="session_ids"></field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <record id="course_action" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</openerp>